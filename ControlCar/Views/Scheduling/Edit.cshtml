@model ControlCar.Models.ViewModel.SchedulingEditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Scheduling</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdScheduling" />
            <div class="form-group">
                <label asp-for="ExpectedStartDate" class="control-label"></label>
                <input asp-for="ExpectedStartDate" class="form-control" />
                <span asp-validation-for="ExpectedStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedEndDate" class="control-label"></label>
                <input asp-for="ExpectedEndDate" class="form-control" />
                <span asp-validation-for="ExpectedEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDatePerformed" class="control-label"></label>
                <input asp-for="StartDatePerformed" class="form-control" />
                <span asp-validation-for="StartDatePerformed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDatePerformed" class="control-label"></label>
                <input asp-for="EndDatePerformed" class="form-control" />
                <span asp-validation-for="EndDatePerformed" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: flex;flex-direction: column;">
                <label asp-for="IdDriver" class="control-label"></label>
                <select asp-for="IdDriver" asp-items="@(new SelectList(Model.Drivers, nameof(Driver.IdDriver), nameof(Driver.DriverDesc)))"></select>
                <span asp-validation-for="Drivers" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: flex;flex-direction: column;">
                <label asp-for="IdVehicle" class="control-label"></label>
                <select asp-for="IdVehicle" asp-items="@(new SelectList(Model.Vehicles, nameof(Vehicle.IdVehicle), nameof(Vehicle.Model)))"></select>
                <span asp-validation-for="Vehicles" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: flex;flex-direction: column;">
                <label asp-for="IdRoute" class="control-label"></label>
                <select asp-for="IdRoute" asp-items="@(new SelectList(Model.Routes, nameof(Route.IdRoute), nameof(Route.RouteDesc)))"></select>
                <span asp-validation-for="Routes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndKm" class="control-label"></label>
                <input asp-for="EndKm" class="form-control" />
                <span asp-validation-for="EndKm" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: flex;flex-direction: column;">
                <label asp-for="IdStatusScheduling" class="control-label"></label>
                <select asp-for="IdStatusScheduling" asp-items="@(new SelectList(Model.Statuses, nameof(StatusScheduling.IdstatusScheduling), nameof(StatusScheduling.Description)))"></select>
                <span asp-validation-for="Statuses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

