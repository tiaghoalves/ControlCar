@model ControlCar.Models.Route

@{
    ViewData["Title"] = "Rota - Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destiny" class="control-label"></label>
                <input asp-for="Destiny" class="form-control" />
                <span asp-validation-for="Destiny" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KmPattern" class="control-label"></label>
                <input asp-for="KmPattern" class="form-control" />
                <span asp-validation-for="KmPattern" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
